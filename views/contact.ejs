<%- include partials/header.ejs %>
<%- include partials/main_nav.ejs %>

<main class="container contact-page">
    <div>
        <h2 class="mt-4">Contact Me:</h2>
        <form action="/" method="post">
            <table>
                <tr>
                    <td><label for="first_name">Enter first name: </label></td>
                    <td><input id="first_name" type="text" name="first_name" /></td>
                </tr>
                <tr>
                    <td><label for="last_name">Enter last name: </label></td>
                    <td><input id="last_name" type="text" name="last_name" /></td>
                </tr>
                <tr>
                    <td><label for="contact_number">Enter contact number: </label></td>
                    <td><input id="contact_number" type="tel" name="contact_number" /></td>
                </tr>
                <tr>
                    <td><label for="email">Enter email: </label></td>
                    <td><input id="email" type="tel" name="email" /></td>
                </tr>
                <tr>
                    <td><label for="message">Enter message: </label></td>
                    <td><textarea id="message" type="text" name="message" rows="5" cols="50"></textarea></td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align: right;"><input type="submit" value="Submit" ></td>
                </tr>
            </table>
        </form>
    </div>
</main>

